{
  "name": "legacy-baas",
  "version": "0.1.0",
  "description": "Banking Legacy-to-Blockchain B2BaaS Platform - Multi-ledger smart switching for banks",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=html --coverageReporters=lcov",
    "test:coverage-check": "jest --coverage --passWithNoTests && npm run coverage-gate",
    "coverage-gate": "nyc check-coverage --lines 100 --functions 100 --branches 100 --statements 100",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t legacy-baas .",
    "docker:run": "docker run -p 3000:3000 legacy-baas",
    "docs:generate": "jsdoc src/ -r -d docs/",
    "blockchain:setup": "node scripts/setup-blockchain-networks.js"
  },
  "keywords": [
    "banking",
    "blockchain",
    "fintech",
    "payments",
    "xrp",
    "corda",
    "ethereum",
    "polygon",
    "algorand",
    "swift",
    "b2b",
    "saas"
  ],
  "author": "LegacyBAAS Team",
  "license": "PROPRIETARY",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@hyperledger/cactus-plugin-ledger-connector-corda": "^2.0.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "pg": "^8.11.1",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "xrpl": "^4.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/node": "^20.4.5",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.1",
    "jest-extended": "^4.0.1",
    "jest-junit": "^16.0.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6"
  },
  "optionalDependencies": {
    "@polygon/sdk": "^1.0.0",
    "algosdk": "^2.7.0",
    "ethers": "^6.14.4",
    "ripple-lib": "^1.10.1",
    "web3": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/[username]/LegacyBAAS.git"
  },
  "bugs": {
    "url": "https://github.com/[username]/LegacyBAAS/issues"
  },
  "homepage": "https://github.com/[username]/LegacyBAAS#readme"
